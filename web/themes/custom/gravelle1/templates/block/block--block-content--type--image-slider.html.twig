{# Image Slider block delegates rendering to the SDC component.
   EVA display (block_images_entity_view_1) provides the minimal .block-items
   wrapper and rows; the component supplies the outer chrome. #}

{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-type--image_slider',
  'block-view-mode--' ~ (block_view_mode|default('default')),
] %}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}
  {% block content %}
    {% set _vm = block_view_mode|default('default') %}
    {# EVA attachment key from view config: block_images_entity_view_1 #}
    {% set _images = content.block_images_entity_view_1 is defined ? content.block_images_entity_view_1|render : '' %}

    {{ include('@gravelle1/components/image_slider/image_slider.html.twig', {
      props: {
        has_label: label ? true : false,
        label: label,
        images: _images,
        view_mode: _vm,
      }
    }) }}
  {% endblock %}
</div>

